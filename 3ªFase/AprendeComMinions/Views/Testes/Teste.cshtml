@model AprendeComMinions.Models.Teste
@using AprendeComMinions.Models

@{
    ViewBag.Title = "Teste";
    IList<Resposta> respostas = ViewBag.respostas;
    int i = 0;

    Pergunta[] perg = new Pergunta[4];
    Resposta[] resp = new Resposta[4];

}
<!-- /section:basics/navbar.layout -->
