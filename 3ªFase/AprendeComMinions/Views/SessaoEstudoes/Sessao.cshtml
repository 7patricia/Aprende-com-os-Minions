@model AprendeComMinions.Models.SessaoEstudo
@using AprendeComMinions.Models
@{
    ViewBag.Title = "Sessão de Estudo";

    String tema;
}
<!-- /section:basics/navbar.layout -->
<div class="main-container" id="main-container">
    <script type="text/javascript">
        try { ace.settings.check('main-container', 'fixed') } catch (e) { }
    </script>

    <!-- #section:basics/sidebar -->
    <div id="sidebar" class="sidebar                  responsive">
        <script type="text/javascript">
            try { ace.settings.check('sidebar', 'fixed') } catch (e) { }
        </script>



        <ul class="nav nav-list">
            <li class="">
                <a href="@Url.Action("Index","Home")">
                    <img src="http://icons.iconarchive.com/icons/designbolts/despicable-me-2/24/Minion-Hello-icon.png">
                    <span class="menu-text"> Início </span>
                </a>

                <b class="arrow"></b>
            </li>

            <li class="">
                <a href="@Url.Action("Index", "Aula")">
                    <img src="http://icons.iconarchive.com/icons/designbolts/despicable-me-2/24/Minion-Amazed-icon.png">
                    <span class="menu-text">
                        Aulas
                    </span>
                </a>
            </li>

            <li class="">
                <a href="@Url.Action("Index", "Exercicios")">
                    <img src="http://icons.iconarchive.com/icons/designbolts/despicable-me-2/24/Minion-Reading-icon.png">
                    <span class="menu-text"> Vamos praticar? </span>
                </a>
            </li>

            <li class="">
                <a href="@Url.Action("Index", "Testes")">
                    <img src="http://icons.iconarchive.com/icons/designbolts/despicable-me-2/24/Minion-Shout-icon.png">
                    <span class="menu-text"> Pronto para ser posto à prova? </span>
                </a>
            </li>
            <li class="active">
                <a href="@Url.Action("Index", "SessaoEstudoes")">
                    <img src="http://icons.iconarchive.com/icons/designbolts/despicable-me-2/32/Minion-Bananas-icon.png">
                    <span class="menu-text"> Sessões de Estudo </span>
                </a>
            </li>
            <li class="">
                <a href="@Url.Action("Details", "Utilizadors")">
                    <img src="http://icons.iconarchive.com/icons/designbolts/despicable-me-2/24/Minion-Shy-icon.png">
                    <span class="menu-text"> Vê Como Te Tens Saído! </span>
                </a>
            </li>
        </ul><!-- /.nav-list -->
        <img style="margin-top: 130px; margin-left:-50px;" src="http://fc04.deviantart.net/fs71/i/2013/241/9/e/minion_by_bibi97nd-d6k9zm2.png" width="350" hegth="350">
    </div>
    <div class="main-content">
        <div class="main-content-inner">

            <!-- /section:basics/content.breadcrumbs -->
            <div class="page-content">
                <div class="page-header">
                    <h1>
                        <center>@Model.Data.ToString();</center>
                    </h1>
                </div><!-- /.page-header -->
                <!-- PAGE CONTENT BEGINS -->
                <center>
                    <div class="row">
                        <div style="margin-left:250px" class="col-xs-6">

                            <label class="control-label bolder blue">Aulas</label>
                            <ul class="ace-thumbnails clearfix">
                                @foreach (var aula in Model.Aulas)
                                {
                                    <li>
                                        <a class="cboxElement" href="@Url.Action("Show", "Aula", new { id = aula.AulaID })" data-rel="colorbox">
                                            <img alt="150x150" src="@aula.URLImagem" width="150" height="150">
                                            <div class="text">
                                                <div class="inner">@aula.Titulo</div>
                                            </div>
                                        </a>
                                    </li>
                                   
                                }
                                </ul>

</div>
                    </div>

                    <div class="row">
                        <div style="margin-left:250px" class="col-xs-6">
                            <label class="control-label bolder blue">Exercícios</label>
                            <ul class="ace-thumbnails clearfix">
                                @foreach (var exercicio in Model.Exercicios)
                                {
                                    <li>
                                        <a class="cboxElement" href="@Url.Action("Exercicio", "Exercicios", new { id = exercicio.ExercicioID })" data-rel="colorbox">
                                            <img alt="150x150" src="@exercicio.URLImagem" width="150" height="150">
                                            <div class="text">
                                                <div class="inner">@exercicio.Tema</div>
                                            </div>
                                        </a>
                                    </li>
                                    
                                }
                                </ul>
</div>
                    </div>
                    <div class="row">
                        <div style="margin-left:250px" class="col-xs-6">
                            <label class="control-label bolder blue">Testes</label>
                            <ul class="ace-thumbnails clearfix">
                                @foreach (var teste in Model.Testes)
                                {
                                    <li>
                                        <a class="cboxElement" href="@Url.Action("Teste", "Testes", new { id = teste.TesteID })" data-rel="colorbox">
                                            <img alt="150x150" src="@teste.URL" width="150" height="150">
                                            <div class="text">
                                                <div class="inner">@teste.Tema</div>
                                            </div>
                                        </a>
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </center>


               
               
                <center><a href=@Url.Action("Index", "SessaoEstudoes")><button style="margin-left:-45px; margin-top:100px" class="btn btn-lg btn-primary">Sair</button></a></center>

                <!-- PAGE CONTENT ENDS -->
            </div><!-- /.page-content -->
        </div>
    </div><!-- /.main-content -->
