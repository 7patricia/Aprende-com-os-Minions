@using AprendeComMinions.Models
@model LoginModel
@{
    ViewBag.Title = "Aprende Com os Minions";
}

<center><h2 style="margin-left: 138px;">@ViewBag.Title</h2></center>
<body class="login-layout">
    <div class="main-container">
        <div class="main-content">
            <div class="row">
                <div class="col-md-4">
                    <img src="http://4.bp.blogspot.com/-ES9Xjd1dDFo/VHxDI0IuwKI/AAAAAAAAWu4/TSq4MrcWyTk/s1600/png%2Bminions%2Bfacebook-123%2B(3).png">
                </div>
            </div>
            <div style="margin-top:-500px" class="col-sm-6 col-sm-offset-1">
                <div class="login-container">
                    <div class="center">
                        <div class="position-relative">
                            <div id="login-box" class="login-box visible widget-box no-border">
                                <div class="widget-body">
                                    <div class="widget-main">
                                        <div class="row">
                                            <section id="loginForm">
                                                @using (Html.BeginForm("Iniciar Sessão", "Utilizadors", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                                                {
                                                    @Html.AntiForgeryToken()
                                                    <h4>Insere os teus dados!</h4>
                                                    <hr />
                                                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                                                    <div class="form-group">
                                                        @Html.LabelFor(m => m.Username, new { @class = "col-md-2 control-label" })
                                                        <div class="col-md-10">
                                                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
                                                            @Html.ValidationMessageFor(m => m.Username, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
                                                        <div class="col-md-10">
                                                            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
                                                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <div class="col-md-offset-2 col-md-10">
                                                            <div class="checkbox">
                                                                @Html.CheckBoxFor(m => m.RememberMe)
                                                                @Html.LabelFor(m => m.RememberMe)
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="form-group">
                                                        <div class="col-md-offset-2 col-md-10">
                                                            <input type="submit" value="Entrar" class="btn btn-default" />
                                                        </div>
                                                    </div>
                                             <p style=" margin-left:76px;">
                                                        @Html.ActionLink("Criar uma conta", "Create")
                                             </p>
                                                    @* Enable this once you have account confirmation enabled for password reset functionality
                                        <p>
                                            @Html.ActionLink("Forgot your password?", "ForgotPassword")
                                        </p>*@
                                                }
                                            </section>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    </div>
                </div>
            </div>
</body>

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
