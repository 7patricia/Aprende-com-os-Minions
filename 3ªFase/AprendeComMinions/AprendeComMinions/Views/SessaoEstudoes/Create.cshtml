using System.Linq;
@model AprendeComMinions.Models.SessaoEstudo

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>SessaoEstudo</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
       
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Tema, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
               @{ 
                   List<SelectListItem> listaTemas = new List<SelectListItem>();
                        listaTemas.Add(new SelectListItem {
                        Text = "Áreas",
                        Value = "Áreas"
                             });
                             
                        listaTemas.Add(new SelectListItem
                        {
                        Text = "Perímetros",
                        Value = "Perímetros",
                             });
                             
                        listaTemas.Add(new SelectListItem {
                        Text = "Medidas de Comprimento",
                        Value = "Medidas de Comprimento"
                                });
                        
                }
                        @Html.DropDownList("Tema da tua Sessao", listaTemas, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Tema, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

